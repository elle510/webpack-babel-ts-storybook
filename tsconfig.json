{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "es2015", "es2016", "es2017", "DOM"],
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    // "paths": {
    //   "@es-design-system/ui": ["./packages/es-ui/src"],
    //   "@es-design-system/ui/*": ["./packages/es-ui/src/*"],
    //   "@es-design-system/icons": ["./packages/es-icons/src"],
    //   "@es-design-system/icons/*": ["./packages/es-icons/src/*"],
    //   "@es-design-system/charts": ["./packages/es-charts/src"],
    //   "@es-design-system/charts/*": ["./packages/es-charts/src/*"],
    //   "@/stories/es-ui/*": ["./stories/01-es-ui/*"]
    // },
    "types": ["node", "react"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react"
  },
  "exclude": ["**/node_modules", "**/.*/", "**/build"]
}
